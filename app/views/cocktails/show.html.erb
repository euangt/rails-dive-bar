<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <i class="fas fa-glass-martini-alt"></i>
  <a class="navbar-brand ml-2">Your Dive Bar</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
</nav>

<div class="container">
  <div class="row m-10">
    <div class="col">
       <%= cl_image_tag(@cocktail.photo.key, class: "card-img-top w-100") %>
    </div>
    <div class="col">
      <h1><%= @cocktail.name %></h1>
      <ul>
        <% @cocktail.doses.each do |dose| %>
          <li><%= dose.ingredient.name %>: <%= dose.description %></li>
        <% end %>
      </ul>
      <%= link_to "Add to the recipe", new_cocktail_dose_path(@cocktail) %>
      <%= link_to "Remove Cocktail", cocktail_path(@cocktail), method: :delete %>
    </div>
  </div>
  <div class="text-center">
    <%= link_to "Back to Menu", root_path %>
  </div>
</div>

