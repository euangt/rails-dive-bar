<div class="container">
  <h1>Add a new cocktail</h1>
  <%= simple_form_for (@cocktail) do |f| %>
    <div class="form inputs">
      <%= f.input :name %>
      <%= f.input :photo, as: :file %>
      <%#= f.input :doses %>
      <%#= f.association :ingredients, as: :check_boxes %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, class: "btn btn-primary"%>
    </div>
  <% end %>
</div>
